<!DOCTYPE xml>
<core:View xmlns:core="sap.ui.core" controllerName="geosort.controller.projects.ProjectDetail" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:f="sap.ui.layout.form" >
    <!-- <m:Page showFooter="false" showHeader="true" enableScrolling="false"> -->
        <ObjectPageLayout>
            <headerTitle>
				<ObjectPageHeader
					objectTitle="{title}">
					<actions>
                        <ObjectPageHeaderActionButton
                            text="{i18n>BUT_FINISH_PROJECT}"
                            press="onFinishProject"
                            hideText="false"
                            type="Emphasized"
                            visible="{path: 'status', formatter: '.formatter.projectFinishButton'}"/>
                        <ObjectPageHeaderActionButton
                            text="{i18n>BUT_ACTIVATE_PROJECT}"
                            press="onActivateProject"
                            hideText="false"
                            type="Emphasized"
                            visible="{path: 'status', formatter: '.formatter.projectActivateButton'}"/>
						<ObjectPageHeaderActionButton
							text="{i18n>BUT_EDIT}"
                            press="onEditProject"
							hideText="false"
							type="Emphasized"
                            visible="false"/>
						<ObjectPageHeaderActionButton
							text="{i18n>BUT_DELETE}"
                            press="onRemoveProject"
							hideText="false"
                            type="Transparent"/>
					</actions>
				</ObjectPageHeader>
            </headerTitle>
            <sections>
                <ObjectPageSection title="{i18n>SECT_STATUS}">
                    <subSections>
                        <ObjectPageSubSection title="{i18n>SECT_STATUS}">
                            <blocks>
                                <f:SimpleForm
                                    visible="{viewModel>/displayMode}"
                                    layout="ResponsiveGridLayout">
                                    <f:content>
                                        <m:Label text="{i18n>LABEL_STATUS}"/>
                                        <m:ObjectStatus text="{path: 'status', formatter: '.formatter.projectStatusText'}" state="{path: 'status', formatter: '.formatter.projectStatusColor'}"/>
                                        <m:Label text="{i18n>LABEL_DIR_NAME}"/>
                                        <m:Text text="{directory}"/>
                                        <m:Label text="{i18n>LABEL_CREATED}"/>
                                        <m:Text text="{path: 'created', formatter: '.formatter.projectDates'}"/>
                                        <m:Label text="{i18n>LABEL_FINISHED}"/>
                                        <m:Text text="{path: 'finished', formatter: '.formatter.projectDates'}"/>
                                    </f:content>
                                </f:SimpleForm>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection title="{i18n>SECT_ADDR_INFO}">
                    <subSections>
                        <ObjectPageSubSection title="{i18n>SECT_ADDR_INFO}">
                            <blocks>
                                <f:SimpleForm
                                    visible="{viewModel>/displayMode}"
                                    layout="ResponsiveGridLayout">
                                    <f:content>
                                        <m:Label text="{i18n>LABEL_STREET_AND_NO}"/>
                                        <m:Text text="{address/street} {address/streetNo}"/>
                                        <m:Label text="{i18n>LABEL_ZIP_AND_CITY}"/>
                                        <m:Text text="{address/zipCode} {address/city}"/>
                                    </f:content>
                                </f:SimpleForm>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection title="{i18n>SECT_GPS_INFO}">
                    <subSections>
                        <ObjectPageSubSection title="{i18n>SECT_GPS_INFO}">
                            <blocks>
                                <f:SimpleForm
                                    visible="{viewModel>/displayMode}"
                                    layout="ResponsiveGridLayout">
                                    <f:content>
                                        <m:Label text="{i18n>LABEL_LATITUDE}"/>
                                        <m:Text text="{path: 'gps/lat', type: 'sap.ui.model.type.Float'}"/>
                                        <m:Label text="{i18n>LABEL_LONGITUDE}"/>
                                        <m:Text text="{path: 'gps/lng', type: 'sap.ui.model.type.Float'}"/>
                                    </f:content>
                                </f:SimpleForm>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
    <!-- </m:Page> -->
</core:View>